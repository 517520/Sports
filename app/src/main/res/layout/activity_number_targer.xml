<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#29292F"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/back_header_target_cycle_relativelayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="@dimen/space_15"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back"/>

        <TextView
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="我的步数目标"
            android:textSize="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:orientation="vertical"
        android:background="#333339"
        android:layout_below="@id/back_header_target_cycle_relativelayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/base_target_cycle_tv"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="基础目标"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#64ffffff"
                android:textSize="@dimen/text_size_14"
                android:text="每天10000步"
                android:layout_marginTop="10dp"
                android:layout_below="@id/base_target_cycle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/choose_base_target_mine_imageView"
                android:tint="@color/white"
                android:paddingTop="@dimen/space_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_check_circle_black_24dp"/>
        </RelativeLayout>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"/>
        <RelativeLayout
            android:id="@+id/custom_target_mine_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/custom_targert_mine"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="自定义目标："
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/custom_target_mine_tv"
                android:text=""
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/custom_targert_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#64ffffff"
                android:textSize="@dimen/text_size_14"
                android:text="输入每日步数目标"
                android:layout_marginTop="10dp"
                android:layout_below="@id/custom_targert_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingTop="@dimen/space_15"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
