<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.sports.contacts.child.activity.AddFriendActivity">

    <com.example.user.sports.ui.AppHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.user.sports.ui.AppHeadView>

    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.SearchView>
    <View style="@style/ViewLine"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="雷达加朋友（附近的人）"
        android:padding="@dimen/space_10"
        android:textSize="@dimen/text_size_18"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手机通讯录"
        android:padding="@dimen/space_10"
        android:textSize="@dimen/text_size_18"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信好友"
        android:padding="@dimen/space_10"
        android:textSize="@dimen/text_size_18"/>
</LinearLayout>
