<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.sports.contacts.team.create.CreateActivity">

    <com.example.user.sports.ui.AppHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.user.sports.ui.AppHeadView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_150">

        <ImageView
            android:id="@+id/background_create_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_120"
            android:src="@color/colorAccent"/>
        <com.example.user.sports.ui.CircleImageView
            android:id="@+id/head_create_civ"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_user_photo"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/space_20"
        style="@style/ViewLine_30dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群组名称"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/space_10"/>
        <EditText
            android:id="@+id/name_create_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入名称"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>
    <View style="@style/ViewLine_30dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群组位置"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/space_10"/>
        <EditText
            android:id="@+id/location_create_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="惠城区（定位）"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>
    <View style="@style/ViewLine_30dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="隐私设置"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:padding="@dimen/space_10"/>
        <TextView
            android:id="@+id/privacy_create_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公开"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>
    <View style="@style/ViewLine_30dp"></View>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:layout_margin="@dimen/space_20"
        android:background="@drawable/bg_border_edittext_gray"/>

    <Button
        android:id="@+id/create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建"
        android:layout_gravity="center"/>
</LinearLayout>
