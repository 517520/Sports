<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/back_headview_tv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_arrow_back"/>
    <TextView
        android:id="@+id/message_headview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/ic_message"/>
    <TextView
        android:id="@+id/number_headview_tv"
        android:layout_width="@dimen/space_15"
        android:layout_height="@dimen/space_15"
        android:text="1"
        android:visibility="gone"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_finish_pressed"/>
    <TextView
        android:id="@+id/title_headview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="标题"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_18"/>

    <TextView
        android:id="@+id/add_headview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_add"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_20"/>
</RelativeLayout>
