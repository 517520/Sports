<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@mipmap/bg_main"
    tools:context=".view.athletics.activity.UploadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/unsave_upload_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不保存"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/finish_red"
            android:padding="@dimen/space_10"/>
        <TextView
            android:id="@+id/state_upload_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="步行结束"
            android:textColor="@color/white"
            android:padding="@dimen/space_10"
            android:gravity="center"
            android:textSize="@dimen/text_size_18"/>
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/upload_mv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clickable="true">

    </com.baidu.mapapi.map.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/space_20">
        <TextView
            android:id="@+id/distance_upload_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:layout_gravity="center" />
        <TextView
            android:layout_toRightOf="@id/distance_upload_tv"
            android:layout_alignBottom="@id/distance_upload_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM"
            android:textColor="@color/white"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/space_20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/speed_upload_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="0.00"
                android:gravity="center"
                android:textSize="25sp"/>
            <TextView
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配速"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/false_white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_upload_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:text="00:00:00"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/false_white"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/calorie_upload_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="0.00"
                android:gravity="center"
                android:textSize="25sp"/>
            <TextView
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡路里"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/false_white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20">

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="280dp"
            android:layout_height="@dimen/space_50"
            android:background="@drawable/btn_rectangle_upload"
            android:text="上传数据"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/continue_upload_btn"
            android:layout_width="110dp"
            android:text="继续"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_continue"
            android:layout_alignLeft="@id/upload_btn"/>

        <Button
            android:id="@+id/finish_upload_btn"
            android:layout_width="110dp"
            android:text="完成"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_finish"
            android:layout_alignRight="@id/upload_btn"/>
    </RelativeLayout>
</LinearLayout>
