<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.sports.athletics.activity.RunFragment">

    <com.example.user.sports.ui.StepArcView
        android:id="@+id/step_run_arv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/space_40"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_rectangle_left"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="@dimen/space_15"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_walk"/>
            <Button
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_rectangle_right"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_riding"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/begin_run_ll"
        android:layout_marginTop="@dimen/space_30"
        android:layout_width="200dp"
        android:layout_height="@dimen/space_40"
        android:layout_gravity="center"
        android:background="@drawable/btn_small_blue"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_3"
            android:visibility="invisible"
            android:src="@drawable/ic_run"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="开始跑步"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_3"
            android:padding="@dimen/space_10"
            android:src="@drawable/ic_run"/>
    </LinearLayout>

</LinearLayout>
