<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:padding="10dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/star_big_on"
        android:id="@+id/picture_cycle_iv"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:text="九月步数挑战赛"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_name_cycle_tv"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture_cycle_iv"/>

    <TextView
        android:text="每天超越10000步"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_describe_cycle_tv"
        android:textSize="8sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture_cycle_iv"
        app:layout_constraintTop_toBottomOf="@+id/activity_name_cycle_tv"/>

    <TextView
        android:text="20天后结束"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_time_cycle_tv"
        app:layout_constraintBottom_toTopOf="@+id/add_cycle_button"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/picture_cycle_iv"/>

    <TextView
        android:text="56893"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_cycle_tv"
        app:layout_constraintBottom_toTopOf="@+id/add_cycle_button"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/arrow_right_cycle_iv"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow_right"
        android:id="@+id/arrow_right_cycle_iv"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="加入"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_cycle_button"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>