<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_exercise_create"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/background_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.sports.cycle.activity.ExerciseCreateActivity">

    <com.example.user.sports.ui.AppHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </com.example.user.sports.ui.AppHeadView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <RelativeLayout
        android:background="@color/background_gray"
        android:id="@+id/background_create_cycle"
        android:layout_below="@id/headview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_150">
        <ImageView
            android:id="@+id/background_create_iv"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_create_team"/>
        <TextView
            android:background="@drawable/replace_background"
            android:layout_marginBottom="@dimen/space_40"
            android:layout_marginRight="@dimen/space_20"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="更换背景"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="25dp"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/background_gray"
        android:id="@+id/exercise_create_message_cycle"
        android:layout_below="@id/background_create_cycle"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/exercise_name_cycle_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_1"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="活动名称"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@null"
                android:textCursorDrawable="@null"
                android:layout_centerVertical="true"
                android:id="@+id/exercise_name_tv"
                android:maxLength="10"
                android:text=""
                android:hint="输入"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_size_16"
                android:textColor="#57ADFC"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"/>
        <RelativeLayout
            android:id="@+id/exercise_address_cycle_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="活动地点"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/exercise_address_cycle_tv"
                android:text="设置"
                android:textSize="@dimen/text_size_16"
                android:textColor="#57ADFC"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"/>
        <RelativeLayout
            android:id="@+id/exercise_time_cycle_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="活动时间"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/exercise_time_cycle_tv"
                android:text="-/-/-至-/-/-"
                android:textSize="@dimen/text_size_16"
                android:textColor="#57ADFC"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_below="@id/exercise_create_message_cycle"
        android:background="#46464C"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"/>
    <Button
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/create_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="创建"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:background="@drawable/btn_add_search"
        android:layout_marginTop="@dimen/space_20"
        android:layout_gravity="center"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_20"
        android:layout_above="@id/create_btn"
        android:layout_below="@id/exercise_create_message_cycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.1"/>
        <EditText
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:textSize="16sp"
            android:textColor="@color/grayWhite"
            android:hint="为本次活动写下简短的介绍"
            android:textColorHint="@color/grayWhite"
            android:background="@color/background_gray"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.1"/>
    </LinearLayout>

</RelativeLayout>
