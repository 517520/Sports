<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="@dimen/space_16"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#cfcccc"
              android:layout_height="wrap_content">
    <TextView
        android:text="运动距离"
        android:textSize="@dimen/text_size_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:padding="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kilo_nunber_tv"
            android:text="35"
            android:layout_centerHorizontal="true"
            android:textSize="36sp"
            android:textColor="#249AE6"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="(公里)"
            android:textSize="12sp"
            android:layout_toRightOf="@id/kilo_nunber_tv"
            android:paddingLeft="@dimen/space_5"
            android:paddingTop="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/number_tv"
                android:layout_gravity="center_horizontal"
                android:text="79"
                android:textSize="@dimen/text_size_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="次数"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time_history_tv"
                android:layout_gravity="center_horizontal"
                android:text="01:00:04"
                android:textSize="@dimen/text_size_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="累计用时"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/speed_average_tv"
                android:layout_gravity="center_horizontal"
                android:text="90'44"
                android:textSize="@dimen/text_size_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="平均配速"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cost_history_tv"
            android:layout_gravity="center_horizontal"
            android:text="55"
            android:textSize="@dimen/text_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="消耗"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    </LinearLayout>
</LinearLayout>