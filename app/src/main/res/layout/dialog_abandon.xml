<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_abandon_dialog"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="此次运动时间太短，无法保存记录，是否继续运动?"
        android:textSize="@dimen/text_size_16"
        android:padding="@dimen/space_15"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>
    <View style="@style/ViewLine"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stop_abandon_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"
            android:textColor="@color/stop_blue"/>
        <View
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:background="@color/gray">
        </View>
        <TextView
            android:id="@+id/continue_abandon_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="继续运动"
            android:padding="@dimen/space_10"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/stop_blue"/>

    </LinearLayout>
</LinearLayout>
