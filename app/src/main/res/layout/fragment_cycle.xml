<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.example.user.sports.ui.AppHeadView
        android:layout_alignParentTop="true"
        android:id="@+id/header_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.user.sports.ui.AppHeadView>


    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:background="@color/background_gray"
        android:id="@+id/viewpagertab_cycle"
        android:layout_below="@id/header_cycle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="4dp"
        app:stl_dividerColor="@color/background_gray"
        app:stl_defaultTabTextSize="@dimen/text_size_14"
        app:stl_defaultTabTextColor="@color/custom_tab_cycle"
        app:stl_distributeEvenly="true"
        app:stl_indicatorColor="#DA4652"
        app:stl_indicatorWidth="65dp"
        app:stl_indicatorCornerRadius="1.5dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="4dp"
        app:stl_underlineColor="@color/background_gray"
        />

    <android.support.v4.view.ViewPager
        android:background="@color/background_gray"
        android:overScrollMode="never"
        android:id="@+id/ViewPager_cycle"
        android:layout_below="@id/viewpagertab_cycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>