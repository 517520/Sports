<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.analysis.activity.AnalysisFragment">
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/SmartTablelayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="4dp"
        android:paddingTop="10dp"
        app:stl_defaultTabTextColor="@color/custom_tab_analysis"
        app:stl_defaultTabTextSize="@dimen/text_size_16"
        app:stl_defaultTabTextMinWidth="120dp"
        app:stl_indicatorAlwaysInCenter="true"
        app:stl_dividerColor="@color/background_black"
        app:stl_indicatorColor="#249AE6"
        app:stl_indicatorThickness="0dp"
        app:stl_underlineColor="@color/background_black">
    </com.ogaclejapan.smarttablayout.SmartTabLayout>

    <View
        android:layout_below="@id/SmartTablelayout"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.1"/>
    <android.support.v4.view.ViewPager
        android:overScrollMode="never"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/SmartTablelayout"
        android:layout_above="@+id/SmartTablelayout2"
        android:id="@+id/viewPagerAna"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@id/SmartTablelayout2"
        app:stl_clickable="false"
        app:stl_customTabTextLayoutId="@layout/custom_tab_circle"
        app:stl_dividerColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="#249AE6"
        app:stl_indicatorCornerRadius="4dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="8dp"
        app:stl_underlineColor="@color/transparent"
        app:stl_underlineThickness="0dp"
        android:paddingBottom="@dimen/space_25"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="46dp">

    </com.ogaclejapan.smarttablayout.SmartTabLayout>


</RelativeLayout>
