<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.sports.contacts.activity.TeamDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:background="@color/background_black">

        <com.example.user.sports.ui.AppHeadView
            android:id="@+id/headview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.example.user.sports.ui.AppHeadView>

        <LinearLayout
            android:background="@color/background_gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_150">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_create_team"/>
                <ImageView
                    android:id="@+id/head_team_detail_iv"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="@dimen/space_80"
                    android:background="@drawable/bg_imageview"
                    android:layout_marginLeft="@dimen/space_15"
                    android:padding="@dimen/space_2"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/fg_imageview"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/space_40"
                style="@style/ViewLine_near_black"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="群组名称"
                    android:textColor="@color/input_hint_gray"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_14"
                    android:padding="@dimen/space_20"/>
                <TextView
                    android:id="@+id/name_team_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="@dimen/space_20"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
            <View style="@style/ViewLine_near_black"
                  android:layout_marginLeft="@dimen/space_15"
                  android:layout_marginRight="@dimen/space_15"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="群组位置"
                    android:textColor="@color/input_hint_gray"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_14"
                    android:gravity="center_vertical"
                    android:padding="@dimen/space_20"/>
                <TextView
                    android:id="@+id/location_team_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:padding="@dimen/space_20"
                    android:textColor="@color/text_blue"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
            <View style="@style/ViewLine_near_black"></View>
        </LinearLayout>




        <View style="@style/ViewLine_near_black"
            android:layout_marginTop="@dimen/space_30"></View>
        <TextView
            android:id="@+id/detail_team_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray"
            android:padding="@dimen/space_20"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:maxLines="4"
            android:minLines="4"/>

        <TextView
            android:id="@+id/exit_team_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出群聊"
            android:textSize="18sp"
            android:padding="@dimen/space_20"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_20"
            android:background="@color/background_gray"
            android:textColor="@color/finish_red_pressed"/>

        <TextView
            android:id="@+id/chat_team_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18"
            android:text="发起群聊"
            android:textColor="@color/white"
            android:padding="@dimen/space_20"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_20"
            android:background="@color/stop_blue"/>
    </LinearLayout>
</ScrollView>
