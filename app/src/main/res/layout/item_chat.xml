<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/left_chat_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/headview_chat_left_item_iv"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/run_man"/>
        <TextView
            android:id="@+id/message_chat_left_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="@dimen/space_8"
            android:layout_toRightOf="@id/headview_chat_left_item_iv"
            android:text="你好！"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/space_10"
            android:textColor="@color/black"
            android:background="@drawable/bg_chat_left"
            android:layout_centerVertical="true"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/message_chat_right_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="@dimen/space_8"
            android:text="你好！"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/space_10"
            android:textColor="@color/white"
            android:background="@drawable/bg_chat_right"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/headview_chat_right_item_iv"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/space_10"
            android:src="@mipmap/run_man"/>

    </LinearLayout>
</LinearLayout>

