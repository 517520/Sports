<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.athletics.activity.AthleticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/walk_athletics_tv"
            android:text="步行"
            style="@style/Text_fragment" />
        <TextView
            android:id="@+id/run_athletics_tv"
            android:text="跑步"
            style="@style/Text_fragment" />
        <TextView
            android:id="@+id/ride_athletics_tv"
            android:text="骑行"
            style="@style/Text_fragment"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/line_athletics_iv"
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_3"
        android:scaleType="matrix"
        android:layout_marginLeft="32dp"
        android:background="@color/text_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_margin="@dimen/space_10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/space_5"
           android:src="@drawable/ic_wealth_partly_cloudy"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/space_5"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:text="32℃"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/white"
            android:text="空气质量：优"/>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/content_athletics_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:persistentDrawingCache="animation">
    </android.support.v4.view.ViewPager>
</LinearLayout>
