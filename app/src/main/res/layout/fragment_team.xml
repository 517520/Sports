<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.sports.contacts.team.activity.TeamFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/create_team_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="创建"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/recommend_team_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推荐"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/search_team_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/control_team_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="管理"
            android:padding="@dimen/space_10"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ff的群组"
        android:padding="@dimen/space_10"
        android:textSize="@dimen/text_size_14"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/team_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
