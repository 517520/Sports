<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#29292F"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.user.sports.ui.AppHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.user.sports.ui.AppHeadView>

    <LinearLayout
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#333339"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <RelativeLayout
            android:id="@+id/personal_message_mine_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="个人资料"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingTop="@dimen/space_4"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"/>
        <RelativeLayout
            android:id="@+id/number_target_mine_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="我的步数目标"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingTop="@dimen/space_4"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"/>
        <RelativeLayout
            android:id="@+id/message_notice_mine_realtivelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="消息通知"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:paddingTop="@dimen/space_4"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right"/>
        </RelativeLayout>
        <View
            android:background="#46464C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"/>
        <RelativeLayout
            android:id="@+id/message_cache_mine_relativelayout"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="清楚缓存"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/cache_setting_iv"
                android:paddingTop="@dimen/space_4"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_right"/>

            <TextView
                android:id="@+id/cache_setting_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue"
                android:layout_marginRight="@dimen/space_5"
                android:layout_toLeftOf="@id/cache_setting_iv"
                android:textSize="@dimen/text_size_16"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/log_out_mime_TV"
        android:gravity="center"
        android:background="#333339"
        android:text="退出登录"
        android:layout_marginTop="200dp"
        android:textColor="#D5555C"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>